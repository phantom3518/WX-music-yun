<scroll-view hidden="{{isLyricShow}}" class="lyric-scroll" scroll-y scroll-top="{{scrollTop}}rpx" scroll-with-animation="true">
  <view class="lyric-panel">
    <block wx:for="{{lrcList}}" wx:key="item">
      <view class="lyric {{nowLyricIndex == index?'hightlight-lyric':''}}">{{item.lrc}}</view>
    </block>
  </view>
</scroll-view>