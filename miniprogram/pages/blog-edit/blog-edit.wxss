
.container {
  padding: 20rpx
}
.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  text-align: center;
  margin: 0 10rpx 10rpx 0;
  position: relative;
}
.icon-addTodo-nav {
  font-size: 60rpx;
  color: #ccc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.selectphoto {
  border: 1px dashed #cbd1d7;
  /* position:relative; */
}
.image-list {
  display: flex;
  flex-wrap: wrap;
}
.image {
  width: 100%;
  height: 100%;
}
.footer {
  background: #f1f1f1;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  height:100rpx;
  display: flex;
  align-items: center;
}
.words-num {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;

}
.send-btn {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin:0 20rpx; 
}
.icon-chuyidong1-copy {
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  top:0;
  right:0;
  width:40rpx;
  height:40rpx;
  background: rgba(0, 0, 0, 0.6);
  color:#fff;

}
